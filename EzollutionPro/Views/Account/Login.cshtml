@model EzollutionPro_BAL.Models.LoginModel
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in </title>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" name="viewport">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    @Styles.Render("~/Content/css")
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body class="skin-blue" style="background:url('/Content/Images/cargo-ship.jpg') no-repeat scroll center bottom / 100% auto">
    <div class="main-body">
        <div class="container-fluid login">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    @using (Html.BeginForm("Login", "Account", new { @returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "frmLogin" }))
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading clearfix">
                                <h3 class="panel-title">
                                    Sign in @System.Configuration.ConfigurationManager.AppSettings["ProjectHeader"]
                                </h3>
                            </div>

                            <div class="panel-body">

                                <div class="form-group">
                                    @Html.Label("Username")
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        @Html.TextBoxFor(z => z.Username, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(z => z.Username)
                                </div>
                                <div class="form-group">
                                    @Html.Label("Password")
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-key"></i>
                                        </div>
                                        @Html.PasswordFor(z => z.Password, new { @class = "form-control" })
                                    </div>
                                        @Html.ValidationMessageFor(z => z.Password)
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="text-right">
                                    <input class="btn btn-primary" type="submit" value="Log in">
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $.validator.unobtrusive.parse("#frmLogin");
        })
    </script>
</body>
</html>
