@model EzollutionPro_BAL.Models.Masters.AirLocationModel
@{
    ViewBag.Title = "Add Update Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <section class="content">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add/Update Location</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(z => z.iLocationId)
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.LabelFor(model => model.sCustomCode, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.sCustomCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sCustomCode, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 form-group">
                            @Html.LabelFor(model => model.sCustomLocation, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.sCustomLocation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sCustomLocation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.LabelFor(model => model.sThreeLetterCode, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.sThreeLetterCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sThreeLetterCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
        </section>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
