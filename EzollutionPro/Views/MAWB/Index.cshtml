@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/datepicker/datepicker3.css" rel="stylesheet" />
<link href="~/Content/daterangepicker/daterangepicker.css" rel="stylesheet" />
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">
            <i class="fa fa-files-o"></i>
            List of MAWB(s)
        </h3>
        <br />
        <br />
        <div class="pull-right">
            <div class="btn-group">
                <button type="button" class="btn btn-warning pull-left" id="daterange-btn">
                    <span>
                        <i class="fa fa-calendar"></i>&nbsp;Select Date range
                    </span>
                    <i class="fa fa-caret-down"></i>
                </button>
                <button id="btnApplyDateRange" class="btn btn-success"><i class="fa fa-search"></i></button>
                <button id="btnRemoveDateRange" class="btn btn-danger pull-right"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="btn-group">
            @if (ViewBag.iRoleId == 7)
            {
                <button type="button" class="btn btn-success" onclick="location.href='/MAWB/AddUpdateMAWB'"><i class="fa fa-plus"></i> Add New Schedule</button>
            }
            else
            {
                <button type="button" class="btn btn-success disabled "><i class="fa fa-plus"></i> Add New Schedule</button>
            }
        </div>
    </div>

    <div class="box-body">
        @if (TempData["MAWBSuccess"] != null)
        {
        <div class="alert alert-success alert-dismissable show" role="alert">
            @TempData["MAWBSuccess"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
        <table id="tblScheduler" class="table table-bordered">
            <thead>
                <tr>
                    <th>SNo</th>
                    <th>Client Name</th>
                    <th>MAWB Number</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/plugins/moment/moment.min.js"></script>
    <script src="~/Content/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Scripts/PageScripts/AirFiling/MAWB.js"></script>
}


