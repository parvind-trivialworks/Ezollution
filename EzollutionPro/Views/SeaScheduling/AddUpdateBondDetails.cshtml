@model EzollutionPro_BAL.Models.BondData
@{
    ViewBag.Title = "Add/Update HBL Bond Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddUpdateBondDetails", "SeaScheduling", FormMethod.Post))
{
    <!-- Main content -->
    <div class="container capitalize">
        <section class="content">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Add/Update HBL Bond Details (MBL No:@Model.sMBLNumber)
                    </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Bond Number</label>
                                    @Html.TextBoxFor(m => m.dBondNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.dBondNumber)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Carrier Code</label>
                                    @Html.TextBoxFor(m => m.sCarrierCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.sCarrierCode)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mode of Transport</label>
                                    @Html.DropDownListFor(m => m.sMovementType,new List<SelectListItem>
                                    {
                                        new SelectListItem{ Text="--MODE OF TRANSPORT--", Value = "" },
                                        new SelectListItem{ Text="TRAIN", Value = "T" },
                                        new SelectListItem{ Text="ROAD", Value = "R" },
                                    }, new { @class = "form-control select2", style = "width:100%" })
                                    @Html.ValidationMessageFor(m => m.sMovementType)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>MLO Code</label>
                                    @Html.TextBoxFor(m => m.sMLOCode, new { @class = "form-control", @readonly = "true" })
                                    @Html.ValidationMessageFor(m=>m.sMLOCode)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
            @Html.HiddenFor(m => m.iSchedulingId)
            @Html.HiddenFor(m => m.iBondID)
            <!-- /.box -->
        </section>
    </div>
}

