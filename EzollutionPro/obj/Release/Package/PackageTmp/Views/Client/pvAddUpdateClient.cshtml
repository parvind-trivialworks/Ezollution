@model EzollutionPro_BAL.Models.Masters.ClientModel
<div class="modal-header">
    <i class="fa fa-times-circle" style="float: right; font-size: 21px; font-weight: 700; line-height: 1; text-shadow: 0 1px 0 #fff; cursor: pointer; margin-top: 2px;" data-dismiss="modal"></i>
    <h4 class="modal-title"><i class="fa fa-edit"></i> Create/Update Client</h4>
</div>
@using (Html.BeginForm("AddUpdateClient", "Client", FormMethod.Post, new { @id = "frmSaveClient" }))
{
    <div class="modal-body">
        @Html.HiddenFor(x => x.iClientID)
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Client Name</label>
                            @Html.TextBoxFor(z => z.sClientName, new { @class="form-control"})
                            @Html.ValidationMessageFor(z=>z.sClientName)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Client Code</label>
                            @Html.TextBoxFor(z => z.sClientCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sClientCode)
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>CARN Number</label>
                            @Html.TextBoxFor(z => z.sCARN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sCARN)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Office Address</label>
                            @Html.TextBoxFor(z => z.sOfficeAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sOfficeAddress)
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Company Name</label>
                            @Html.TextBoxFor(z => z.sCompanyName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sCompanyName)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>LandLine Number</label>
                            @Html.TextBoxFor(z => z.sLandLineNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sLandLineNumber)
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mobile Number</label>
                            @Html.TextBoxFor(z => z.sMobileNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sMobileNumber)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fax Number</label>
                            @Html.TextBoxFor(z => z.sFaxNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sFaxNumber)
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(z => z.sEmailID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sEmailID)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>ICEGate SeaID</label>
                            @Html.TextBoxFor(z => z.sICEGateSeaID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sICEGateSeaID)
                        </div>
                    </div>
                    <!-- /.form-group -->
                </div>
                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Pincode</label>
                            @Html.TextBoxFor(z => z.sPinCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sPinCode)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Price/Unit</label>
                            @Html.TextBoxFor(z => z.dPricePerUnit, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.dPricePerUnit)
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>GSTN-No</label>
                            @Html.TextBoxFor(z => z.sGSTNNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.sGSTNNo)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label claass="control-label ">State Name</label>
                        @Html.DropDownListFor(x => x.sStateCode, new SelectList(ViewBag.States, "Value", "Text"), "[ SELECT ]", new { @class = "form-control", @data_live_search = "true" })
                        @Html.ValidationMessageFor(x => x.sStateCode)
                    </div>
                    <!-- /.form-group -->
                </div>
            </div>
            <!-- /.row -->
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-remove"></i> Cancel</button>
    </div>
}
