@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dist/css")
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue layout-top-nav">
    <div id="loading"><div class="loader"></div></div>
    @Html.Hidden("Activity")
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="/" class="navbar-brand"><b>@System.Configuration.ConfigurationManager.AppSettings["ProjectHeader"]</b></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            @Html.Raw(ViewBag.Menu)
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            @Html.Raw(ViewBag.Masters)
                        </ul>
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    @if (!string.IsNullOrEmpty(ViewBag.Photo))
                                    {
                                        <img src="@ViewBag.Photo" class="user-image" alt="User Image">
                                    }
                                    else
                                    {
                                        <i class="fa fa-user"></i>
                                    }
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs">@ViewBag.User_name</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        @if (!string.IsNullOrEmpty(ViewBag.Photo))
                                        {
                                            <img src="@ViewBag.Photo" class="user-image" alt="User Image">
                                        }
                                        else
                                        {
                                            <i class="fa fa-user"></i>
                                        }
                                        <p>
                                            @ViewBag.User_name
                                            <small></small>
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="@Url.Action("edit", "account")" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="@Url.Action("logout", "account")" class="btn btn-default btn-flat">Sign out</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <div class="content-wrapper">
            <div class="container">
                <section class="content">
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 1.0.0
                </div>
                <strong>Copyright &copy; @DateTime.Now.Year.ToString() &minus; &nbsp;<a href="@Url.Action("Index", "Home")">@System.Configuration.ConfigurationManager.AppSettings["ProjectHeader"]</a>.</strong> All rights reserved.
            </div>
        </footer>
    </div>
    <div id="Modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" id="ModalContainer">
            </div>
        </div>
    </div>
    <div id="ModalLg" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="ModalLgContainer">
            </div>
        </div>
    </div>
    <div id="ModalSm" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content" id="ModalSmContainer">
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/common.js")
    <script src="~/Content/dist/js/app.js"></script>

    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
